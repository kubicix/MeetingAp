@model List<UserInfo>

@{
	ViewBag.Title = "List of Meeting Attendees";
}

<main class="text-center">
	<h1 class="h4">List of Meeting Attendees</h1>
	<table class="table table-bordered">
		<thead>
			<tr>
				<td>Name</td>
				<td>Participating Status</td>
				<td></td>
			</tr>
		</thead>
		<tbody>
			@{
				int i = 0;
			}

			@foreach (var user in Model)
			{
				var className = user.WillAttend == true ? "table-success" : "table-danger";
				if (user.WillAttend == true) i++;
				<tr class="@className">
					<td>@user.Name</td>
					<td>@(user.WillAttend == true ? "Yes" : "No")</td>
					<td>
						<a class="btn btn-primary btn-sm" href="/meeting/details/@user.Id">Details</a>
					</td>
				</tr>

			}

		</tbody>

	</table>
	<div class="card">
		<div class="card-body">
			<span>	<b>@i</b> people joining to the meeting.</span>
		</div>
	</div>
</main>